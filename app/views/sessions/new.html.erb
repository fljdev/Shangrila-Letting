
<%= form_tag do %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <h1 align = "center">Login</h1>
  <%= form_for(:session, url: login_path) do |f| %>
	
			<%= f.label :email %>
			</br>
			<%= f.text_field :email, :placeholder=>'enter users email here', class: 'form-control' %>
			</br>
	
		  <%= f.label :password %>
      <%= f.password_field :password, :placeholder=>'between (6-10) characters',class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-block btn-primary" %>
			
	<%end%>
   </div>
</div>
<% end %>



